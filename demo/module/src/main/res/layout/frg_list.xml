<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewModel"
                type="com.timper.module.feature.list.ListViewModel"/>

        <variable
                name="view"
                type="com.timper.module.feature.list.ListFragment"/>

        <import type="com.timper.bindingadapter.recyclerview.LayoutManagers"/>
    </data>

    <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:itemBinding="@{view.itemBinding}"
                app:items="@{viewModel.datas}"
                app:layoutManager="@{LayoutManagers.linear()}"
        >
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</layout>